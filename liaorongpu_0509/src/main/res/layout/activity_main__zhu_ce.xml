<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.liaorongpu_0509.MainActivity_ZhuCe">

    <EditText
        android:id="@+id/zetxt_hao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/zetxt_pwd"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:ems="10"
        android:hint="请输入手机号"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/zetxt_pwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/zetxt_hao"
        android:layout_marginTop="67dp"
        android:ems="10"
        android:hint="请输入密码"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/zbtn_zc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/zetxt_hao"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="99dp"
        android:text="立即注册" />

    <Button
        android:id="@+id/zbtn_fan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="返回" />

</RelativeLayout>
